<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   <RelativeLayout 
       android:id="@+id/title_layout"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/title_bg"
       android:minHeight="50dp"
       >
       <Button 
           android:id="@+id/back_to_villagelist"
           android:layout_width="70dp"
           android:layout_height="50dp"
           android:background="@drawable/mm_title_btn_back"
           android:layout_marginLeft="10dp"
           android:text="返回"
           android:textSize="18sp"
           android:textColor="@color/white"
           android:layout_centerVertical="true"
           />
       <TextView 
           android:id="@+id/farmlist_title_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxWidth="300dp"
           android:textSize="@dimen/text_size"
           android:text="烟农列表"
           android:singleLine="true"
           android:textColor="@color/white"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           />
       <Button 
           android:id="@+id/farmer_add"
           android:layout_width="70dp"
           android:layout_height="50dp"
           android:background="@drawable/mm_title_btn_right"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           android:textSize="18sp"
           android:textColor="@color/white"
           android:text="添加"
           android:layout_centerVertical="true"
           />
   </RelativeLayout>
   <RelativeLayout 
       android:id="@+id/editext_layout"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/title_layout"
       android:background="@color/navpage"
       android:padding="5dp"
       android:focusable="true"
       android:focusableInTouchMode="true"
       >
       <EditText 
           android:id="@+id/farmlist_edittext"
           android:layout_width="fill_parent"
           android:layout_height="35dp"
           android:background="@drawable/search_bar_edit_normal"
           android:hint="搜您想找的烟农"
           android:textSize="16sp"
           android:textColorHint="@android:color/darker_gray"
           />
       	<Button 
       	    android:id="@+id/search_clear"
       	    android:layout_width="25dp"
       	    android:layout_height="25dp"
       	    android:background="@drawable/search_clear_btn"
       	    android:layout_centerVertical="true"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="5dp"
       	    android:visibility="gone"
       	    />
   </RelativeLayout>
   
   <android.support.v4.view.ViewPager
        android:id="@+id/farmerlist_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/editext_layout"
        android:layout_above="@+id/farmlist_radiogroup"
    />
   <RadioGroup 
       android:id="@+id/farmlist_radiogroup"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal"
       android:background="@color/navpage"
       >
       <RadioButton 
           android:id="@+id/radiobutton_yes"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_weight="1.0"
           android:button="@null"
           android:text="意向签约"
           android:textColor="@color/black"
           android:textSize="18sp"
           android:background="@drawable/farmer_radiobtn"
           android:gravity="center"
           />
       <View 
           android:layout_width="1dp"
           android:layout_height="fill_parent"
           android:background="@color/white"
           />
       <RadioButton 
           android:id="@+id/radiobutton_un"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_weight="1.0"
           android:button="@null"
           android:text="待确定"
           android:textColor="@color/black"
           android:textSize="18sp"
           android:checked="true"
           android:background="@drawable/farmer_radiobtn"
           android:gravity="center"
           />
        <View 
           android:layout_width="1dp"
           android:layout_height="fill_parent"
           android:background="@color/white"
           />
       <RadioButton 
           android:id="@+id/radiobutton_no"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_weight="1.0"
           android:button="@null"
           android:text="无意向签约"
           android:textColor="@color/black"
           android:textSize="18sp"
           android:gravity="center"
           android:background="@drawable/farmer_radiobtn"
           />
   </RadioGroup>
   <ListView 
       android:id="@+id/droplistview"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="30dp"
       android:layout_below="@+id/editext_layout"
       android:layout_marginTop="-5dp"
       >
       
   </ListView>
</RelativeLayout>
