<?xml version="1.0" encoding="utf-8"?>
<com.asiaonline.tobaccoassistant.widget.MenuSelectButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dip"
    android:background="@drawable/preference_single_item"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:minHeight="50dp" >

        <TextView
            android:id="@android:id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_weight="1.0"
            android:textSize="18sp"
            android:singleLine="true" />
		<com.asiaonline.tobaccoassistant.widget.AlwaysMarqueeTextView
            android:id="@android:id/summary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1.0"
            android:textSize="16sp"
            android:singleLine="true" 
            android:textColor="#666666"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="2.0dip"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/mm_submenu" />
    </LinearLayout>
</com.asiaonline.tobaccoassistant.widget.MenuSelectButton>